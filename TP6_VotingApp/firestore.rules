rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour la collection Events
    match /Events/{eventId} {
      allow read: if true; // Tout le monde peut lire les événements
      allow update: if request.auth != null; // Autoriser le vote pour les utilisateurs connectés
      allow create, delete: if false; // Seuls les admins peuvent créer/supprimer
    }
    
    // Règles pour la collection Votes
    match /Votes/{voteId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
                    && request.auth.uid == request.resource.data.userId
                    && request.resource.data.vote in ['yes', 'no'];
      allow update, delete: if false; // Les votes ne peuvent pas être modifiés ou supprimés
    }
  }
}

